<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.uofa.adventure_app"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE"> </uses-permission>
    <uses-permission android:name="android.permission.READ_INTERNAL_STORAGE"> </uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"></uses-permission>

    <application
        android:name="com.uofa.adventure_app.application.AdventureApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.uofa.adventure_app.activity.FirstRunOnlyActivity"
            android:label="@string/title_activity_first_run_only" >
        </activity>
        <activity
            android:name="com.uofa.adventure_app.activity.BrowserActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.uofa.adventure_app.activity.EditFragementActivity"
            android:label="@string/title_activity_edit_fragement" >
        </activity>
        <activity
            android:name="com.uofa.adventure_app.activity.EditStoryActivity"
            android:label="@string/title_activity_edit_story" >
        </activity>
        <activity
            android:name="com.uofa.adventure_app.activity.StoryActivity"
            android:label="@string/title_activity_story" >
        </activity>
    </application>

</manifest>