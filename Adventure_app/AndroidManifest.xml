    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" android:name=".application.AdventureApplication">
        <activity
            android:name=".activity.BrowserActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.EditFragementActivity"
            android:label="@string/title_activity_edit_fragement" >       </activity>
        <activity
            android:name=".activity.EditStoryActivity"
            android:label="@string/title_activity_edit_story" >
        </activity>
        <activity
            android:name=".activity.StoryActivity"
            android:label="@string/title_activity_story" >
        </activity>
    </application>

</manifest>
